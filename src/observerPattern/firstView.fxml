<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="observerPattern.FirstController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="text" text="0" />
    <Button GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#buttonIncrementClicked" text="+" />
    <Button GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#buttonDecrementClicked" text="-" />
</GridPane>